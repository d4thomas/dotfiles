[
  // Create new group splits
  {
    "key": "cmd+alt+shift+up",
    "command": "workbench.action.newGroupAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+shift+down",
    "command": "workbench.action.newGroupBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+shift+left",
    "command": "workbench.action.newGroupLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+shift+right",
    "command": "workbench.action.newGroupRight",
    "when": "editorTextFocus"
  },

  // Navigate between group splits
  {
    "key": "cmd+alt+up",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+down",
    "command": "workbench.action.focusBelowGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+left",
    "command": "workbench.action.focusLeftGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+right",
    "command": "workbench.action.focusRightGroup",
    "when": "editorTextFocus"
  },

  // Toggle current group split maximize/minimize
  {
    "key": "cmd+alt+m",
    "command": "workbench.action.toggleEditorWidths",
    "when": "editorTextFocus"
  },

  // Resize current group split
  {
    "key": "cmd+alt+l",
    "command": "workbench.action.decreaseViewWidth",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+k",
    "command": "workbench.action.increaseViewHeight",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+j",
    "command": "workbench.action.decreaseViewHeight",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+alt+h",
    "command": "workbench.action.increaseViewWidth",
    "when": "editorTextFocus"
  },

  // Multicursor
  {
    "key": "ctrl+alt+up",
    "command": "editor.action.insertCursorAbove",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+down",
    "command": "editor.action.insertCursorBelow",
    "when": "editorTextFocus"
  },

  // Debug
  {
    "key": "alt+b",
    "command": "workbench.action.debug.start",
    "when": "debuggersAvailable && debugState != 'initializing'"
  }
]
