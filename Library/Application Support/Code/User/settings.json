{
  // Language Specific
  "javascript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.enabled": "all",

  // Security & Trust
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.untrustedFiles": "open",

  // Window & Workbench
  "git.openRepositoryInParentFolders": "never",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.location": "top",
  "workbench.editor.empty.hint": "hidden",
  "workbench.startupEditor": "newUntitledFile",

  // Editor - General
  "editor.minimap.enabled": false,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.links": false,
  "editor.stickyScroll.enabled": false,
  "editor.occurrencesHighlight": "off",
  "editor.accessibilitySupport": "off",
  "editor.renderWhitespace": "trailing",
  "editor.semanticHighlighting.enabled": true,
  "editor.inlayHints.enabled": "offUnlessPressed", // Option-Control to Toggle
  "editor.parameterHints.enabled": false, // Command-Shift-Space to Toggle

  // Editor - Fonts
  "editor.fontFamily": "Berkeley Mono Variable, Symbols Nerd Font",
  "editor.fontSize": 13,
  "editor.fontLigatures": false,

  // Terminal
  "terminal.integrated.fontFamily": "Berkeley Mono Variable, Symbols Nerd Font",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "\"calt\" off",
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",

  // Telemetry
  "telemetry.feedback.enabled": false,
  "telemetry.editStats.enabled": false,
  "telemetry.telemetryLevel": "off",

  // Extensions
  "redhat.telemetry.enabled": false,
  "calva.paredit.defaultKeyMap": "strict",
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true
  },
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },

  // Features & UI/UX
  "problems.showCurrentInStatus": true,
  "inlineChat.lineNaturalLanguageHint": false,
  "explorer.autoReveal": false,
  "extensions.ignoreRecommendations": true,

  // Theme & Colors
  "workbench.preferredDarkColorTheme": "Monokai Pro",
  "workbench.preferredLightColorTheme": "Monokai Pro Light",
  "workbench.iconTheme": "Monokai Pro Light Icons",
  "window.autoDetectColorScheme": true,
  "workbench.colorCustomizations": {
    "focusBorder": "#00000000",
    "editorInlayHint.background": "#00000000"
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.block.documentation", "comment.line"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  }
}
