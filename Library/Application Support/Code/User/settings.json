{
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "window.titleBarStyle": "custom",
    "problems.showCurrentInStatus": true,
    "workbench.activityBar.location": "top",
    "workbench.editor.empty.hint": "hidden",
    "inlineChat.lineNaturalLanguageHint": false,
    "workbench.startupEditor": "newUntitledFile",
    "window.autoDetectColorScheme": true,
    "workbench.preferredLightColorTheme": "Monokai Pro Light",
    "workbench.preferredDarkColorTheme": "Monokai Pro",
    "workbench.iconTheme": "Monokai Pro Light Icons",
    "workbench.colorCustomizations": {
            "focusBorder": "#00000000",
            "editorInlayHint.background": "#00000000",
        },
    "explorer.autoReveal": false,
    "editor.minimap.enabled": false,
    "editor.fontFamily": "BlexMono Nerd Font",
    "terminal.integrated.fontFamily": "BlexMono Nerd Font",
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.links": false,
    "editor.stickyScroll.enabled": false,
    "editor.occurrencesHighlight": "off",
    "editor.accessibilitySupport": "off",
    "editor.renderWhitespace": "trailing",
    "editor.semanticHighlighting.enabled": true,
    "editor.tokenColorCustomizations": {
    "textMateRules": [
        {
            "scope": [
                "comment",
            ],
            "settings": {
                "fontStyle": "italic"
            }
        }
    ]
    },

    "redhat.telemetry.enabled": false,
    "mdb.confirmRunAll": false,
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
}